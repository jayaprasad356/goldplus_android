<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MasterActivity"
    android:background="@drawable/gradiant_bg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_arrow_back_24"
                android:backgroundTint="@color/white"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Master"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_bg_corner"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <LinearLayout
                    android:id="@+id/llDealergoldmithmaster"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_bg"
                    android:padding="@dimen/_14sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    >




                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:backgroundTint="@color/black"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:background="@drawable/ic_bi_file_earmark_person"
                        />


                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="@dimen/_2sdp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:layout_marginRight="@dimen/_10sdp"
                        />



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dealer Goldmith master"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:textSize="@dimen/_14sdp"
                        />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llOpeningmaster"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_bg"
                    android:padding="@dimen/_14sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    >




                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:backgroundTint="@color/black"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:background="@drawable/ic_uil_opera"
                        />


                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="@dimen/_2sdp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:layout_marginRight="@dimen/_10sdp"
                        />



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Opening Master"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                        android:textSize="@dimen/_14sdp"
                        />


                </LinearLayout>

            </LinearLayout>






        </RelativeLayout>



    </LinearLayout>








</RelativeLayout>